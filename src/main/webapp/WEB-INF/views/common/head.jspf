	<script>
		var ses = '${sessionScope.ses}';
		var loginBtn = document.getElementById("login");
		if (!ses) {
			loginBtn.innerHTML = "로그인/회원가입";
		} else {
			loginBtn.innerHTML = "로그아웃";
		}
		function mainPage() {
			location = "/uri/main/main";
		}

		function goLogin() {
			if (!ses) {
				location = "/uri/user/login";
			} else {
				location = "/logout";
			}
		}
		function goSchool() {
			var param = document.querySelector('#search').value;
			location = "/schools/"+param;
		}
		function goNotice() {
			location = "/uri/board/noticelist";
		}
		function goMap() {
			location = "/uri/map/map";
		}
		function goUser() {
			if (!ses) {
				alert('로그인을 해주세요');
				location = "/uri/user/login";
			} else {
				location = "/uri/user/userget";
			}
			
		}
		function gofreeList(){
			location = "/uri/board/freeboardlist";
		}
		</script>