<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bdi.sc.ST">
	<select id="selectSTList" resultType="st">
		select * from st_info
	</select>
	<select id="selectST" resultType="st">
		select * from st_info
		where
		stnum=#{stnum}
	</select>

	<insert id="insertST">
		insert into st_info(stname,stschool,stpwd)
		values(#{stname},#{stschool},#{scpwd})
	</insert>

	<update id="updateSchool">
		update st_info
		<set>
			<if test="stname!=null"> stname=#{stname},</if>
			<if test="stschool!=null"> stschool=#{stschool},</if>
			<if test="stpwd!=null"> stpwd=#{stpwd},</if>
		</set>
		where stnum=#{stnum}
	</update>

	<delete id="deleteSchool">
		delete from st_info
		where stnum=#{stnum}
	</delete>
</mapper>